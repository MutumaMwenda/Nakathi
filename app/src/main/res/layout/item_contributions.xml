<!-- ListView Custom Views -->
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/size_8"
    app:cardBackgroundColor="@color/white">

    <RelativeLayout
        android:id="@+id/list_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50"
        android:layout_margin="@dimen/size_8"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/list_imageview"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:adjustViewBounds="true"
            android:visibility="gone"
            android:contentDescription="@string/imageview"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_profile" />

        <LinearLayout
            android:id="@+id/list_item_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_16"
            android:layout_marginStart="@dimen/size_16"
            android:layout_toEndOf="@+id/list_imageview"
            android:layout_toRightOf="@+id/list_imageview"
            android:orientation="horizontal">



                <TextView
                    android:id="@+id/trans_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toStartOf="@id/date"
                    android:layout_toLeftOf="@id/date"
                    android:text="Tranx"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tuesday"
                    android:textColor="#70000000"
                    android:textSize="@dimen/text_size_18sp"
                    android:visibility="gone" />



            <TextView
                android:id="@+id/c_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_16"
                android:text="@string/amount"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="normal"
                android:layout_marginLeft="@dimen/size_16" />

            <TextView
                android:id="@+id/c_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_16"
                android:text="From: 31/12/2018 9:00 AM"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="normal"
                android:layout_marginLeft="@dimen/size_16" />
            <TextView
                android:id="@+id/tv_date_assigned_up_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_4"
                android:visibility="gone"
                android:text="To: 31/12/2018 9:00 AM"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="normal" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_2"
                android:orientation="horizontal">




                <Button
                    android:id="@+id/btn_approve"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:padding="@dimen/padding_normal_8dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    android:background="@drawable/button"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="view"
                    android:textColor="@android:color/white" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
