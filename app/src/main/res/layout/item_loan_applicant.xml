<!-- ListView Custom Views -->
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/size_8"
    app:cardBackgroundColor="@color/white">

    <RelativeLayout
        android:id="@+id/list_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_8"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/list_imageview"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:adjustViewBounds="true"
            android:contentDescription="imageview"
            android:scaleType="centerCrop"
            android:src="@drawable/profile" />

        <LinearLayout
            android:id="@+id/list_item_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_16"
            android:layout_toEndOf="@+id/list_imageview"
            android:layout_toRightOf="@+id/list_imageview"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/firstname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_toStartOf="@id/date"
                    android:layout_toLeftOf="@id/date"
                    android:text="John Doe"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text="Tuesday"
                    android:textColor="#70000000"
                    android:textSize="@dimen/text_size_18sp"
                    android:visibility="gone" />

            </RelativeLayout>

            <TextView
                android:id="@+id/loan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_4"
                android:text="Request Amount: Ksh 50,000"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tv_borrowed_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_4"
                android:text="Borrowed on: 31/12/2018 9:00 AM"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="normal" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_2"
                android:orientation="horizontal">



                <Button
                        android:id="@+id/btn_approve"
                        android:layout_width="wrap_content"
                        android:layout_height="42dp"
                        android:padding="@dimen/size_8"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:text="Proceed"
                        android:background="@color/colorPrimary"
                        android:textColor="@color/white"
                        />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
