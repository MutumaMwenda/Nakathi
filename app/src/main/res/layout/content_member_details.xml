<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:padding="@dimen/size_16"
    tools:context=".MyAccount"
    tools:showIn="@layout/activity_member_details">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true">
        <!-- android:layout_gravity="center_vertical"-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_16"
            android:background="@android:color/transparent"
            android:orientation="vertical"
            android:weightSum="1">

            <ImageView
                android:id="@+id/img2001"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:src="@mipmap/ic_launcher"
                android:visibility="gone" />


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/size_8"
                android:gravity="center">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/profileImageView"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/profile"
                    app:civ_border_color="@android:color/white"
                    app:civ_border_width="1dp" />


            </FrameLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="@dimen/size_16"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:paddingTop="9dp"
                    android:text="Name"
                    android:textSize="@dimen/text_size_18sp"
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/tv_fnames"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="7dp"
                    android:background="@null"
                    android:layout_marginStart="7dp"
                    android:focusableInTouchMode="false"
                    android:maxLines="2"
                    android:textColor="#000"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/text_size_18sp" />
            </LinearLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1px"
                android:layout_marginTop="5dp"
                android:background="#808080" />
            <LinearLayout
                android:id="@+id/lya"

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_16"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/myaccount006"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:paddingTop="9dp"
                    android:text="Requested Amount"
                    android:textSize="@dimen/text_size_18sp"
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/tv_requestedAmount"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="7dp"
                    android:background="@null"
                    android:focusableInTouchMode="false"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:textColor="#000"
                    android:textSize="@dimen/text_size_18sp" />
            </LinearLayout>




               <View
                android:layout_width="wrap_content"
                android:layout_height="1px"
                android:layout_marginTop="5dp"
                android:background="#808080" />
            <LinearLayout
                android:id="@+id/l"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_16"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvBamount"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:paddingTop="9dp"
                    android:text="Borrowed Amount"
                    android:textSize="@dimen/text_size_18sp"
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/tv_borrowed_amount"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="7dp"
                    android:background="@null"
                    android:focusableInTouchMode="false"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:textColor="#000"
                    android:textSize="@dimen/text_size_18sp" />
            </LinearLayout>







            <View
                android:layout_width="wrap_content"
                android:layout_height="1px"
                android:layout_marginTop="5dp"
                android:background="#808080" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_16"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:paddingTop="10dp"
                    android:text="Borrowed On"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/text_size_18sp" />

                <TextView
                    android:id="@+id/tv_borrowedOn"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="7dp"
                    android:background="@null"
                    android:focusableInTouchMode="false"
                    android:maxLines="2"
                    android:textColor="#000"
                    android:textSize="@dimen/text_size_18sp" />
            </LinearLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1px"
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:background="#808080" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_16"
                android:visibility="gone"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:paddingTop="10dp"
                    android:text="National ID"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/text_size_18sp" />

                <TextView
                    android:id="@+id/tv_idno"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="7dp"
                    android:focusableInTouchMode="false"
                    android:background="@null"
                    android:textColor="#000"
                    android:textSize="@dimen/text_size_18sp" />
            </LinearLayout>




            <View
                android:layout_width="wrap_content"
                android:layout_height="1px"
                android:visibility="visible"
                android:layout_marginTop="5dp"
                android:background="#808080" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_marginTop="@dimen/size_16"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Number of Guarantors"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/text_size_18sp" />

                <TextView
                    android:id="@+id/tv_no_of_guarantors"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="7dp"
                    android:background="@null"
                    android:focusableInTouchMode="false"
                    android:gravity="center_vertical"
                    android:textColor="#000"
                    android:textSize="@dimen/text_size_18sp"
                    tools:text="3" />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1px"
                android:layout_marginTop="5dp"
                android:background="#808080" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/size_32"
                android:layout_marginBottom="@dimen/size_16"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_approve"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:padding="@dimen/padding_normal_8dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/button"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="Accept"
                    android:textColor="@android:color/white" />



                <Button
                    android:id="@+id/btn_reject"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:padding="@dimen/padding_normal_8dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/button"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="Reject"
                    android:textColor="@android:color/white" />

            </RelativeLayout>

        </LinearLayout>


    </ScrollView>
</RelativeLayout>
